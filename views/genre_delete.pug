extends layout

block content

    h1 #{title}: #{genre.name}
    p #{genre._id}
    if genre_books.length

        p #[strong Delete the following Books before attempting to delete this Genre.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Books
            dl
                each val in genre_books
                    dt
                        a(href=val.url) #{val.title}
                    dd #{val.summary}

    else
        p Do you really want to delete this Genre?

        form(method='POST')
            div.form-group
                input#genreid.form-control(type='hidden', name='genreid', value=genre._id )

            button.btn.btn-primary(type='submit') Delete
