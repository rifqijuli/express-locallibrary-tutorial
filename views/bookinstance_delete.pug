extends layout

block content

    h1 #{title}: #{book_instances.book.title}
    p #{book_instances.status}
    p #{book_instances.imprint}
    p Do you really want to delete this book instance?

    form(method='POST')
        div.form-group
            input#bookinstanceid.form-control(type='hidden', name='bookinstanceid', value=book_instances._id )

        button.btn.btn-primary(type='submit') Delete
